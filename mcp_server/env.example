# MCP Server 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# 服务器基本信息
MCP_SERVER_NAME="MIRIX MCP Server"
MCP_SERVER_VERSION="2.0.0"

# 传输配置 - 固定为SSE模式
MCP_TRANSPORT_TYPE="sse"

# SSE 传输配置
MCP_SSE_HOST="0.0.0.0"
MCP_SSE_PORT=18002
MCP_SSE_HEARTBEAT_INTERVAL=30
MCP_SSE_ENDPOINT="/sse"
MCP_SSE_MESSAGE_ENDPOINT="/messages"
MCP_SSE_CORS_ORIGINS=["*"]

# MIRIX 后端集成配置
MIRIX_BACKEND_URL="http://localhost:8000"
MIRIX_API_TIMEOUT=30

# 日志配置
MCP_LOG_LEVEL="INFO"
MCP_DEBUG=false

# 数据库配置 (继承自主项目)
DATABASE_URL="postgresql://mirix:mirix@localhost:5432/mirix"

# 可选：OpenAI API配置 (用于嵌入和LLM功能)
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4"

# 可选：Google API配置
GOOGLE_API_KEY=""
